<header>
	<div class="container">
		<h1>Add Skills</h1>
	</div>
</header>

<div class="container">

  {{#if alert}}
    <p class="card-panel teal lighten-4">{{ alert }}</p>
  {{/if}}

  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <label for="topic">Topic</label>
          <select id="topic" required>
            <option value="" disabled selected>Choose your option</option>
            {{#each topics }}
            <option value="{{ this.objectId }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="input-field col s6">
          <label for="competency">Competency</label>
          <select id="competency" required>
            <option value="" disabled selected>Choose your competency</option>
            {{#each competencies }}
            <option value="{{ this.abbr }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="input-field col s6">
           <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="mdi-content-send right"></i>
          </button>
        </div>
      </div>
    </form>
  </div>

  <div class="buttons">
    <a class="waves-effect waves-light btn" href="#profile/{{ user.objectId }}">Back to Profile</a>
  </div>
	
</div>
