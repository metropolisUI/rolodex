<header>
    <div class="container">
        <h1 class="center-align">Search Members</h1>
    </div>
</header>

<div class="container">

    <div class="row">
        <nav>
            <div class="input-field col s12 center-align">
                <div class="input-field member-search">
                    <input id="search" type="text" required>
                    <label for="search"><i class="mdi-action-search"></i></label>
                </div>
            </div>
        </nav>
    </div>
    <div class="row">

        {{#each users}}
          <div class="col m3">
            {{include "member" this}}
          </div>
        {{else}}
          <h2>No Members, bro!</h2>
        {{/each}}

    </div>


    <section class="topics">
        <p>Select a topic to search for members by skill type</p>
        <ul>
            {{#each topics}}
                <li><a href="#">{{ this.name }}</a></li>
            {{/each}}
        </ul>
    </section>
</div>
