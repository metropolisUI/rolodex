<header>
    <div class="container">
        <h1 class="center-align">Search Members</h1>
    </div>
</header>


<div class="main-content">
    <div class="row">

        <div class="col s8 input-field member-search">
            <nav>
                <div id="home-search" class="input-field">
                    <input class="typeahead" id="search-bar" type="text" placeholder="Search by user name, job title, or skill...">
                    <label for="search"><i class="mdi-action-search"></i></label>
                </div>
            </nav>
        </div>

        <div class="col s4 search-filters">
            <a class="waves-effect waves-light btn-large">Search</a>
        </div>
    </div>
    <div class="row">
        <div class="col m9">
            {{#each users}}
                <div class="col m3">
                    {{include "member" this}}
                </div>
            {{else}}
                <h2>No Members, bro!</h2>
            {{/each}}

        </div>
        <div class="col m3">
            <ul class="collection skill-types">
                <li class="collection-header"><h4>Skill Types</h4></li>
                {{#each topics}}
                    <li><a href="#" class="skill-text">{{ this.name }}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>